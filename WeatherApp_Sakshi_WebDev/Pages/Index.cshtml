@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Weather App</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        header {
            background: #3282b8;
            color: #fff;
            padding-top: 30px;
            min-height: 70px;
            border-bottom: #e8491d 3px solid;
        }

            header h1 {
                padding: 5px 0;
            }

        .search-section, .weather-section {
            margin-top: 20px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
        }

        #weather-form input[type="text"] {
            width: 74%;
            padding: 10px;
        }

        #weather-form button {
            width: 25%;
            background: #e8491d;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
        }

            #weather-form button:hover {
                background: #333;
            }

        footer {
            background: #3282b8;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: relative;
            bottom: 0;
            left: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Weather App</h1>
        </header>
        <main>
            <section class="search-section">
                <h2>Search for Weather</h2>
                <form id="weather-form">
                    <input type="text" id="city-input" placeholder="Enter a city" required />
                    <button type="submit">Get Weather</button>
                </form>
            </section>
            <section class="weather-section">
                <h2>Weather Information</h2>
                <div id="weather-data">
                    <!-- Weather data will be displayed here -->
                </div>
            </section>
        </main>
        <footer>
            <p>&copy; 2023 Weather App by Sakshi Sheth</p>
        </footer>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>
